{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node",
    "types": ["node"],

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "sourceMap": true,

    "declaration": false,
    "declarationMap": false
  }
}
